<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.donation_project.controller.DonorDashboardController">

    <!-- Top section: Header with donor's name and status -->
    <top>
        <HBox spacing="16.0" alignment="CENTER_LEFT" styleClass="header">
            <padding>
                <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
            </padding>
            <Text text="Donor Dashboard" styleClass="h1"/>
            <Label fx:id="donorNameLabel" text="Donor Name" styleClass="header-text"/>
            <Label fx:id="donorStatusLabel" text="Active" styleClass="status-label"/>
        </HBox>
    </top>

    <!-- Left section: Notifications pane -->
    <left>
        <VBox spacing="16.0" styleClass="sidebar">
            <padding>
                <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
            </padding>
            <Label text="Notifications" styleClass="section-title"/>
            <ListView fx:id="notificationList" styleClass="notification-list"/>
        </VBox>
    </left>

    <!-- Center section: Main content of the dashboard -->
    <center>
        <VBox spacing="16.0" styleClass="main-content">
            <padding>
                <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
            </padding>
            <Label text="Received Donations" styleClass="section-title"/>
            <TableView fx:id="receivedDonationsTable" styleClass="donations-table">
                <columns>
                    <TableColumn fx:id="donationIdColumn" text="Donation ID"/>
                    <TableColumn fx:id="amountColumn" text="Amount"/>
                    <TableColumn fx:id="dateColumn" text="Date"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Right section: Profile card -->
    <right>
        <VBox spacing="16.0" styleClass="profile-card">
            <padding>
                <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
            </padding>
            <Label text="Your Profile" styleClass="section-title"/>
            <Label fx:id="profileNameLabel" text="John Doe" styleClass="profile-name"/>
            <Label fx:id="profileSchoolLabel" text="University of Example" styleClass="profile-school"/>
            <ImageView fx:id="profileImage" fitWidth="100.0" fitHeight="100.0" preserveRatio="true"/>
        </VBox>
    </right>

    <!-- Bottom section: Footer with "Donate" button -->
    <bottom>
        <HBox spacing="16.0" alignment="CENTER" styleClass="footer">
            <padding>
                <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
            </padding>
            <Button fx:id="donateButton" text="Donate" onAction="#handleDonate"/>
            <Text text="Thank you for your generosity!" styleClass="footer-text"/>
        </HBox>
    </bottom>

</BorderPane>
